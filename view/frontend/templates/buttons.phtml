                href="<?= $escaper->escapeHtmlAttr($provider['socialLoginUrl']) ?>">
                <img src="<?= $escaper->escapeHtmlAttr($provider['logoIconUrl']); ?>">
                <span>
                    <?= $escaper->escapeHtml(__('Sign in with '))?><?= $escaper->escapeHtml($provider['label']) ?>
                </span>
            </a>
        <?php endforeach; ?>

        <div class="divider-wrapper">
            <span class="divider"><?= $escaper->escapeHtml(__('Or'))?></span>
